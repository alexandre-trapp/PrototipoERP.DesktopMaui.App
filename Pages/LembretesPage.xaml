<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrototipoERP.DesktopMaui.Pages.LembretesPage"
             BackgroundColor="{DynamicResource SecondaryColor}"
             Title="Prototipo ERP">

    <ScrollView>
        <Frame BackgroundColor="#BF043055" HasShadow="False">
            <StackLayout Orientation="Vertical" Spacing="10">

                <Label 
                    Text="Lembretes"
                    FontSize="32"
                    TextColor="White"
                    HorizontalOptions="Center" />

                <ListView x:Name="myListView" VerticalOptions="StartAndExpand">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Label Text="{Binding Texto}" />
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Text="Ver lembretes do meu usuário" Clicked="OnMeuUsuarioClicked"></Button>
                <Button Text="Ver lembretes de todos os usuários" Clicked="OnTodosUsuariosClicked"></Button>
            </StackLayout>
        </Frame>

    </ScrollView>
</ContentPage>
